                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <!--7. Extra Reihe um die Felder Quadratisch zu machen-->
                </Grid.RowDefinitions>

                <local:Workday                              MouseDown="CheckFormFocus" MouseUp="OpenWorkdayPromt" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
