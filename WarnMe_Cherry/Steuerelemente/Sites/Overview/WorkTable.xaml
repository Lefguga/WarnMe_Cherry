        <local:Workday Grid.Column="6"              ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
        <local:Workday Grid.Column="7"              ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
        <!--                                        ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"-->
