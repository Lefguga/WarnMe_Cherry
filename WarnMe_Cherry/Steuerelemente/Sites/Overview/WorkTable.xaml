            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <!--7. Extra Reihe um die Felder Quadratisch zu machen-->
        </Grid.RowDefinitions>

        <local:Workday Grid.Column="1"              ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
