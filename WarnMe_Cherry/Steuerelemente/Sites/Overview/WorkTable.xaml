        <local:Workday Grid.Row="2" Grid.Column="7" ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
        <!--                                        ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"-->
        <local:Workday Grid.Row="3" Grid.Column="1" ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
