        <local:Workday Grid.Row="1" Grid.Column="2" ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
        <local:Workday Grid.Row="1" Grid.Column="3" ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
        <local:Workday Grid.Row="1" Grid.Column="4" ValueUpdated="UpdateEvent" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
