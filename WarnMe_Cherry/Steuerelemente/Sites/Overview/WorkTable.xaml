        <Canvas x:Name="Rec1" Margin="1"              MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
        <Canvas x:Name="Rec2" Margin="1" Grid.Row="1" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
        <Canvas x:Name="Rec3" Margin="1" Grid.Row="2" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
        <Canvas x:Name="Rec4" Margin="1" Grid.Row="3" MouseEnter="MarkWorkdayActive" MouseLeave="MarkWorkdayInactive"/>
